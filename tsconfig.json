{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["vite.config.*", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@stores/*": ["src/stores/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@plugins/*": ["src/plugins/*"]
    },
    "types": ["vite-plugin-svg-icons/client", "node", "vitest"]
  }
}
